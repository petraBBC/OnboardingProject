<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#141414"
    tools:context=".PickSports">

    <ImageView
        android:id="@+id/imageView3"
        android:layout_width="256dp"
        android:layout_height="99dp"
        android:layout_marginTop="48dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.496"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/picksporttext" />

    <GridLayout
        android:id="@+id/gridLayout"
        android:layout_width="380dp"
        android:layout_height="462dp"
        android:layout_margin="10dp"
        android:columnCount="3"
        android:rowCount="3"
        app:layout_constraintBottom_toTopOf="@+id/nextButton"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView3"
        tools:context=".PickSports">

        <androidx.cardview.widget.CardView
            android:id="@+id/football"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_rowWeight="1"
            android:layout_columnWeight="1"
            android:layout_margin="10dp"
            app:cardElevation="0dp"
            >

            <RelativeLayout
                android:id="@+id/football_layout"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/card_grey">

                <ImageView
                    android:layout_width="75dp"
                    android:layout_height="93dp"
                    android:layout_centerInParent="true"
                    android:src="@drawable/football"
                    />
            </RelativeLayout>
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/formula1"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_rowWeight="1"
            android:layout_columnWeight="1"
            android:layout_margin="10dp"
            app:cardElevation="0dp">

            <RelativeLayout
                android:id="@+id/formula1_layout"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="#3A3C3E">

                <ImageView
                    android:layout_width="90dp"
                    android:layout_height="103dp"
                    android:layout_centerInParent="true"
                    android:src="@drawable/formula_1" />
            </RelativeLayout>
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/golf"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_rowWeight="1"
            android:layout_columnWeight="1"
            android:layout_margin="10dp"
            app:cardElevation="0dp">

            <RelativeLayout
                android:id="@+id/golf_layout"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="#3A3C3E">

                <ImageView
                    android:layout_width="83dp"
                    android:layout_height="94dp"
                    android:layout_centerInParent="true"
                    android:src="@drawable/golf" />
            </RelativeLayout>
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/rugbyLeague"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_rowWeight="1"
            android:layout_columnWeight="1"
            android:layout_margin="10dp"
            app:cardElevation="0dp">

            <RelativeLayout
                android:id="@+id/rugbyLeague_layout"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="#3A3C3E">

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="139dp"
                    android:layout_centerInParent="true"
                    android:src="@drawable/rugby_league" />
            </RelativeLayout>

        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/tennis"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_rowWeight="1"
            android:layout_columnWeight="1"
            android:layout_margin="10dp"
            app:cardElevation="0dp">

            <RelativeLayout
                android:id="@+id/tennis_layout"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="#3A3C3E">

                <ImageView
                    android:layout_width="65dp"
                    android:layout_height="90dp"
                    android:layout_centerInParent="true"
                    android:src="@drawable/tennis" />
            </RelativeLayout>
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/rugbyUnion"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_rowWeight="1"
            android:layout_columnWeight="1"
            android:layout_margin="10dp"
            app:cardElevation="0dp">

            <RelativeLayout
                android:id="@+id/rugbyUnion_layout"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="#3A3C3E">

                <ImageView
                    android:layout_width="102dp"
                    android:layout_height="131dp"
                    android:layout_centerInParent="true"
                    android:src="@drawable/rugby_union" />
            </RelativeLayout>
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/cricket"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_rowWeight="1"
            android:layout_columnWeight="1"
            android:layout_margin="10dp"
            app:cardElevation="0dp">

            <RelativeLayout
                android:id="@+id/cricket_layout"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="#3A3C3E">

                <ImageView
                    android:layout_width="74dp"
                    android:layout_height="94dp"
                    android:layout_centerInParent="true"
                    android:src="@drawable/cricket" />
            </RelativeLayout>
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/boxing"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_rowWeight="1"
            android:layout_columnWeight="1"
            android:layout_margin="10dp"
            app:cardElevation="0dp">

            <RelativeLayout
                android:id="@+id/boxing_layout"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="#3A3C3E">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="99dp"
                    android:layout_centerInParent="true"
                    android:src="@drawable/boxing" />
            </RelativeLayout>
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/athletics"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_rowWeight="1"
            android:layout_columnWeight="1"
            android:layout_margin="10dp"
            app:cardElevation="0dp">

            <RelativeLayout
                android:id="@+id/athletics_layout"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="#3A3C3E">

                <ImageView
                    android:layout_width="83dp"
                    android:layout_height="94dp"
                    android:layout_centerInParent="true"
                    android:src="@drawable/athletics" />
            </RelativeLayout>
        </androidx.cardview.widget.CardView>


    </GridLayout>

    <Button
        android:id="@+id/nextButton"
        android:layout_width="228dp"
        android:layout_height="50dp"
        android:layout_marginBottom="24dp"
        android:background="#FFD230"
        android:fontFamily="sans-serif"
        android:text="Next"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>